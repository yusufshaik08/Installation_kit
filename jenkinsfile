pipeline{
	tools{
		jdk 'java'
		maven 'maven'
		}
		agent any
		stages{
			stage('checkout'){
				agent any
				steps{
					echo 'CLONING....'
					git 'https://github.com/Venkatapathi84/venkat.git'
				}
			}	
			stage('compile'){
				agent any
				steps{
					echo 'COMPILING...'
					sh 'mvn compile'
				}
			}
			stage('codereview'){
				agent any
				steps{
					echo 'CODEREVIEW'
					sh 'mvn pmd:pmd'
				}
			}
			stage('unitTest'){
				agent any
				steps{
					sh 'mvn test'
				}
				
			}
			/*metric test is here but pending */
			stage('package'){
				agent any
				steps{
					sh 'mvn test'
				}
			}
			/* stage('deploy'){
				agent any
				steps{
					sh label: ' ',script: '''rm -rf mydockerfile				
					mkdir docker
					cd docker
					cp /var/lib/jenkins/workspace/package1/target/sample.war .
